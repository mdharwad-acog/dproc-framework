{
  "reportName": "my-sales Sales Report",
  "author": "",
  "dataSources": [
    "./data/sample-sales.csv"
  ],
  "fields": {
    "custom": [
      {
        "name": "company",
        "value": "Your Company"
      },
      {
        "name": "period",
        "value": "Q1 2025"
      }
    ],
    "computed": [
      {
        "name": "total_revenue",
        "function": "SUM(revenue)"
      },
      {
        "name": "avg_revenue",
        "function": "AVG(revenue)"
      },
      {
        "name": "top_product",
        "function": "TOP(product, revenue, 1)"
      }
    ]
  },
  "specFile": "./spec.yml",
  "output": {
    "formats": [
      "md",
      "html",
      "pdf"
    ],
    "destination": "./output"
  }
}