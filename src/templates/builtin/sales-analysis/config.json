{
  "reportName": "Sales Performance Report",
  "author": "",
  "dataSources": ["./data/sample-sales.csv"],
  "fields": {
    "custom": [
      { "name": "company", "value": "Your Company" },
      { "name": "period", "value": "Q1 2025" }
    ],
    "computed": [
      { "name": "total_revenue", "function": "SUM(revenue)" },
      { "name": "avg_revenue", "function": "AVG(revenue)" },
      { "name": "top_product", "function": "TOP(product, revenue, 1)" }
    ]
  },
  "spec": {
    "variables": [
      {
        "name": "executive_summary",
        "type": "markdown",
        "prompt": "./prompts/executive-summary.md",
        "inputs": [
          "bundle.samples.main",
          "bundle.computedFields",
          "bundle.stats"
        ]
      }
    ]
  },
  "template": "./templates/sales-report.njk",
  "output": {
    "formats": ["md", "html", "pdf"],
    "destination": "./output"
  }
}
